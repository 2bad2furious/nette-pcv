<ol class="breadcrumb">
    {foreach $path as $p}
        <li class="breadcrumb-item" {last}aria-current="page"{/last}>
            {if $p->isVisible()}
                <a href="{$p->getCompleteUrl(true)}">{$p->getTitle()}</a>
            {else}
                <span>{if $p->isTitleDefault()}{_$p->getTitle()}{else}{$p->getTitle()}{/if}</span>
            {/if}
            {*{if !$iterator->isLast()}
                <span class="spacer"></span>
                <i class="fa fa-chevron-right"></i>
            {/if}*}
        </li>
    {/foreach}
</ol>