{block content}
    {control languageEditForm}
    <a id="language-delete" class="btn delete"
       href="{plink delete! $id}"
       data-prompt="{_"admin.language.edit.action.delete.confirm.text"}"
       data-confirm="{_"admin.language.edit.action.delete.confirm.yes"}"
       data-cancel="{_"admin.language.edit.action.delete.confirm.no"}">
        <i class="fa fa-trash"></i>
        {_"admin.language.edit.action.delete.label"}
    </a>
{/block}